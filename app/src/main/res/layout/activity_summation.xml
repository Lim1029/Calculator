<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96FDFCFC"
    tools:context="Summation">


    <TextView
        android:id="@+id/summation_ttile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Summation"
        android:textColor="#000"
        android:textColorLink="#fff"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/summation_variableStart"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="Start"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColorHint="#67000000"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/summation_varaibleEquation"
        android:layout_width="240dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Equation"
        android:textAlignment="center"
        android:textColorHint="#7B000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/summation_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/summation_variableEnd"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="End"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColorHint="#73000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <EditText
        android:id="@+id/summation_variableIncrement"
        android:layout_width="112dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Increment"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColorHint="#73000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502" />

    <TextView
        android:id="@+id/summation_answer"
        android:layout_width="232dp"
        android:layout_height="41dp"
        android:layout_marginTop="256dp"
        android:hint="Answer"
        android:text=""
        android:textAlignment="center"
        android:textColorHint="#76000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/summation_btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summation_answer" />

    <TextView
        android:id="@+id/summation_instruction"
        android:layout_width="409dp"
        android:layout_height="27dp"
        android:text="Enter summation equation with X as variable"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/summation_varaibleEquation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summation_ttile"
        app:layout_constraintVertical_bias="0.339" />

    <Button
        android:id="@+id/matric_btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="backButtonPressed"
        android:text="Return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>