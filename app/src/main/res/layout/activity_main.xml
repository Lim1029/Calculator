                android:tag="⁻¹"
                android:text="x⁻¹"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="abs("
                android:text="abs"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
