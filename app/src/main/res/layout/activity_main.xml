            <Button
                android:id="@+id/btnSqrt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="√("
                android:text="√□"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLog10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="log("
                android:text="log"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
