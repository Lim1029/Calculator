<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBFFFFFF"
    tools:context=".BaseConversion">

    <Button
        android:id="@+id/btnConvertBase"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:tag="convert"
        android:text="convert/equal"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtHexadecimal_Base" />

    <Button
        android:id="@+id/btnClear_Base"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:tag="clear"
        android:text="clear"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConvertBase" />

    <Button
        android:id="@+id/btnBack_Base"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:tag="back"
        android:text="back"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDelete_Base" />

    <Button
        android:id="@+id/btnDelete_Base"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:tag="del"
        android:text="delete"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClear_Base" />

    <TextView
        android:id="@+id/txtBinary_Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Binary:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edtBinary_Base"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDecimal_Base" />

    <TextView
        android:id="@+id/txtDecimal_Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Decimal:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edtDecimal_Base"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleBaseConversion" />

    <EditText
        android:id="@+id/edtDecimal_Base"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Enter decimal expression..."
        android:inputType="number"
        android:tag="dec"
        android:textAllCaps="true"
        android:textColor="#0E0000"
        android:textColorHint="#69000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleBaseConversion" />

    <EditText
        android:id="@+id/edtOctal_Base"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Enter octal expression..."
        android:inputType="number"
        android:tag="oct"
        android:textAllCaps="true"
        android:textColor="#0E0000"
        android:textColorHint="#69000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtBinary_Base" />

    <EditText
        android:id="@+id/edtHexadecimal_Base"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Enter hexadecimal expression..."
        android:inputType="textPersonName"
        android:tag="hex"
        android:textAllCaps="true"
        android:textColor="#0E0000"
        android:textColorHint="#69000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtOctal_Base" />

    <EditText
        android:id="@+id/edtBinary_Base"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Enter binary expression..."
        android:inputType="number"
        android:tag="bin"
        android:textAllCaps="true"
        android:textColor="#0E0000"
        android:textColorHint="#69000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDecimal_Base" />

    <TextView
        android:id="@+id/txtOctal_Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Octal:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edtOctal_Base"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBinary_Base" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="94dp"
        android:layout_height="18dp"
        android:layout_marginTop="40dp"
        android:text="Hexadecimal:"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/edtHexadecimal_Base"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOctal_Base" />

    <TextView
        android:id="@+id/txtTitleBaseConversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Base Conversion"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSubstration_Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:width="80dp"
        android:tag="-"
        android:text="-"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtHexadecimal_Base" />

    <Button
        android:id="@+id/btnAddition_Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:width="80dp"
        android:tag="+"
        android:text="+"
        android:textIsSelectable="false"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/btnSubstration_Base"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toEndOf="@+id/btnConvertBase"
        app:layout_constraintTop_toBottomOf="@+id/edtHexadecimal_Base" />

    <Button
        android:id="@+id/btnDivision_Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:width="80dp"
        android:tag="รท"
        android:text="รท"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubstration_Base" />

    <Button
        android:id="@+id/btnMultiplication_Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="80dp"
        android:tag="*"
        android:text="ร"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDivision_Base"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/btnDelete_Base"
        app:layout_constraintTop_toBottomOf="@+id/btnAddition_Base" />

</androidx.constraintlayout.widget.ConstraintLayout>